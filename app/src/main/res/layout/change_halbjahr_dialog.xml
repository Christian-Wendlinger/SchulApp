<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/halbjahrWechselnText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="8dp"
        android:text="Halbjahr wechseln"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/radioButton111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="11/1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/halbjahrWechselnText" />

    <RadioButton
        android:id="@+id/radioButton131"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:text="13/1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/halbjahrWechselnText" />

    <RadioButton
        android:id="@+id/radioButton121"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="12/1"
        app:layout_constraintEnd_toStartOf="@+id/radioButton131"
        app:layout_constraintStart_toEndOf="@+id/radioButton111"
        app:layout_constraintTop_toBottomOf="@+id/halbjahrWechselnText" />

    <RadioButton
        android:id="@+id/radioButton112"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="11/2"
        app:layout_constraintStart_toStartOf="@+id/radioButton111"
        app:layout_constraintTop_toBottomOf="@+id/radioButton111" />

    <RadioButton
        android:id="@+id/radioButton122"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="12/2"
        app:layout_constraintStart_toStartOf="@+id/radioButton121"
        app:layout_constraintTop_toBottomOf="@+id/radioButton121" />

    <RadioButton
        android:id="@+id/radioButton132"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="13/2"
        app:layout_constraintStart_toStartOf="@+id/radioButton131"
        app:layout_constraintTop_toBottomOf="@+id/radioButton131" />

</androidx.constraintlayout.widget.ConstraintLayout>